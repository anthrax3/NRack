{
  "version": "1.0.0-*",
  "buildOptions": {
    "emitEntryPoint": false,
    "compile": {
      "exclude": [
          "*.cs",
          "Configuration/**/*.cs",
          "Properties/**/*.cs",
          "Config/**/*.cs" ],
      "includeFiles": [
          "Config/IServerConfig.cs",
          "Config/IConfigSource.cs",
          "Config/NRackConfig.cs",
          "Config/ServerConfig.cs",
          "Config/HotUpdateAttribute.cs",
          "IBootstrap.cs",
          "IAppServer.cs",
          "IAppEndPoint.cs",
          "IManagedApp.cs",
          "IMessageBus.cs",
          "StartupType.cs",
          "ServerState.cs",
          "IsolationMode.cs",
          "StatusInfoCollection.cs",
          "Extensions.cs",
          "IStatusCollector.cs",
          "ICompositeTarget.cs"
        ],
        "excludeFiles": [
          "CompositeTargtes/LoggerFactoryCompositeTarget.cs"
        ]
    }
  },
  "frameworks": {
    "netstandard1.3": {
      "buildOptions": {
        "define": [ "DOTNETCORE" ]
      },
      "imports": "portable-net45+win8",
      "dependencies": {
        "System.Runtime": "4.1.0-rc2-*",
        "System.Collections.Specialized": "4.0.1-rc2-*",
        "System.Linq": "4.1.0-rc2-*",
        "Microsoft.Extensions.Logging.Abstractions": "1.0.0-rc2-*",
        "Microsoft.Composition": "1.0.30",
        "System.Reflection.Extensions": "4.0.1-rc2-*"
      }
    }
  }
}
